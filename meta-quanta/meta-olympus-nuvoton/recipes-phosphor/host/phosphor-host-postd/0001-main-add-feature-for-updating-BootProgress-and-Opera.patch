+    MEM_INIT = getPostCodeNum(POST_CODE_MEM_INIT);
+    PCI_INIT = getPostCodeNum(POST_CODE_PCI_INIT);
+    BOARD_INIT = getPostCodeNum(POST_CODE_BOARD_INIT);
